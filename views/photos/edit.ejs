<div class="columns is-centered">
  <div class="column is-4"></div>
  <div class="column is-4">
    <form action="/photos/<%= _id %>?_method=PUT" method="post">
      <div class="field">
        <label class="label">Image</label>
        <div class="control">
          <input class="input is-rounded"type="text" name="image" placeholder="Image URL" value="<%= image %>">
        </div>
      </div>
      <div class="field">
        <label class="label">Description</label>
        <div class="control">
          <input  class="input is-rounded" type="text" name="description" placeholder="Description" value="<%= description %>">
        </div>
      </div>
      <input type="hidden" name="addedBy" value="<%= locals.currentUser._id%>">
      <div class="field is-grouped is-grouped-centered">
        <button class="button is-rounded is-info" style="margin-right: 1vw;">UPDATE</button>
        <button class="button is-rounded" style="margin-left: 1vw;"><a href="javascript:history.back()">CANCEL</a></button>
      </div>
    </form>
  </div>
  <div class="column is-4"></div>
</div>
